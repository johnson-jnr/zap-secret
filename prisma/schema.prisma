generator client {
    provider = "prisma-client-js"
    output   = "../node_modules/.prisma/client"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Secret {
    id         String    @id @default(auto()) @map("_id") @db.ObjectId
    hash       String // SHA256 hash of the original plaintext
    cipherText String // AES-encrypted version of the plaintext
    expiresAt  DateTime? // Optional time-to-live (if not set, itâ€™s single-use)
    burnedAt   DateTime? // Set when the secret is viewed (makes it unusable after)
    createdAt  DateTime  @default(now())
}
